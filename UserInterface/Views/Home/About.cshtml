@using Entity.Concrete
@model List<Skill>



<div class="container">
    <div class="text-center">
        <h3>My Skills</h3>
        <img src="~/MySiteTemplate/assets/img/lines.svg" class="img-lines" alt="lines">
    </div>
    <div class="row">
        @foreach (var skill in Model)
        {
            if (skill.IsActive == true)
            {
                <div class="col-md-4 btn border-danger">

                    <div class="skill">
                        <h4>@skill.SkillName</h4>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" data-transitiongoal="@skill.SkillPercent"></div><!-- /.progress-bar -->
                        </div><!-- /.progress -->
                    </div><!-- /.skill -->

                </div>
            }
        }
    </div>
</div>
