@using Entity.Concrete
@model List<Project>

<div class="container">

    <div class="text-center">
        <h3>My recent Works</h3>
        <img src="~/MySiteTemplate/assets/img/lines.svg" class="img-lines" alt="lines">
    </div>
    <div class="row">
        @foreach (var project in Model)
        {

            <div class="col-md-4 col-xs-6">
                <div class="portfolio-item">
                    <img src="~/MySiteTemplate/assets/img/@project.ProjectImgUrl" class="img-res" alt="">
                    <div class="portfolio-item-info">
                        <h4>@project.ProjectName</h4>
                        @*<a href="#" data-toggle="modal" data-target="#portfolioItem1"><span class="glyphicon glyphicon-eye-open"></span></a>*@
                        <a href="@project.ProjectLinkUrl"><span class="glyphicon glyphicon-link"></span></a>
                    </div><!-- /.portfolio-item-info -->
                </div><!-- /.portfolio-item -->
            </div>

        }
    </div>
    </div>
